<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Basic informations -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Site informations -->
    <title>Flavius Muresan</title>
    <meta name="author" content="Dominik Serafin" />

    <!-- Fonts -->
    <link
      href="/fonts/webfont-raleway/webfont-raleway.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="/fonts/webfont-font-awesome/css/font-awesome.css"
      rel="stylesheet"
      type="text/css"
    />

    <!-- Stylesheets -->
    <link
      href="/css/global.css"
      type="text/css"
      rel="stylesheet"
      media="all"
    />

    <base href="/">
    <!-- Scripts preload -->
    <!--[if lt IE 9]><script src="../public/js/html5shiv.js"></script><![endif]-->
  </head>

  <body>
    <!-- Some Helper Stuff -->
    <div id="start" class="start">&nbsp;</div>
    <div class="maxwidth1050">&nbsp;</div>

    <!-- Header -->
    <header class="header">
      <div class="header__wrapper">
        <div class="header__hamburger">
          <div class="header__hamburger-block">&nbsp;</div>
          <div class="header__hamburger-block">&nbsp;</div>
          <div class="header__hamburger-block">&nbsp;</div>
        </div>
        <nav class="header__navigation">
          <a href="#start" class="js-smooth-scroll">
            <div class="js-smooth-scroll header__navigation-element">
              Start...
            </div>
          </a>
          <a href="#experience" class="js-smooth-scroll">
            <div
              class="header__navigation-element header__navigation-element--experience"
            >
              Skills...
            </div>
          </a>
          <a href="#realizations" class="js-smooth-scroll">
            <div
              class="header__navigation-element header__navigation-element--realizations"
            >
              Portfolio...
            </div>
          </a>
          <a href="#contact" class="js-smooth-scroll">
            <div
              class="header__navigation-element header__navigation-element--contact"
            >
              Contact...
            </div>
          </a>
        </nav>

        <a href="#start" class="header__title-wrapper js-smooth-scroll">
          <div class="header__title-main">
            <span class="description-input" role="textbox" contenteditable>{{data.about.fullName}}</span>
          </div>
          <div class="header__title-sub">Personal website</div>
        </a>

        <div class="header__social-icons">
          <a target="_blank" href='{{data.about.github}}'
            ><i class="fa fa-github"></i
          ></a>
          <a target="_blank" href='{{data.about.instagram}}'
            ><i class="fa fa-instagram contact-icon"></i
          ></a> 
        </div>
      </div>
    </header>
    <!-- End Header -->

    <!-- First Fixed "Hero" Section -->
    <section id="hero" class="hero">
      <div class="hero__background">&nbsp;</div>
      <div class="hero__gradient">&nbsp;</div>
      <div class="hero__pattern">&nbsp;</div>
      <div class="hero__content">
        <div class="hero__content-wrapper">
          <div class="hero__title-wrapper">
            <div class="hero__title-large">Hello!</div>
            <div class="hero__title-small">My name is 
              <span class="description-input" role="textbox" contenteditable>{{data.about.firstName}}</span>
            </div>
          </div>
          <div class="hero__description">
            <span class="description-input" role="textbox" contenteditable>{{data.about.description}}</span>
            <button class="save-changes-btn hidden">Apply</button>
          </div>
        </div>
      </div>
    </section>
    <!-- End First Fixed "Hero" Section -->

    <!-- Scrollable Content -->
    <div class="content">
      <!-- "Experience" Section -->
      <section id="experience" class="experience">
        <div class="experience__hollow-arrow">&nbsp;</div>
        <div class="experience__wrapper">
          <div class="section-header">
            <div
              class="section-header__title section-header__title--experience"
            >
              My Skills...
            </div>
            <div class="section-header__subtitle">
              Software and technologies that I'm experienced in
            </div>
          </div>
          <div class="experience__icons-wrapper">
            {{#each data.skills}}
              <div class="experience__icon" style="background-image: url({{this.iconPath}});">
                <div class="experience__icon-description">{{this.technologyName}}</div>
              </div>
            {{/each}}
            <div class = "experience__icon experience__icon--plus"></div>
          </div>
          
      </section>
      <!-- End "Experience" Section -->

      <!-- "Realizations" Section - With Projects -->
      <section id="realizations" class="realizations">
        <div class="realizations__wrapper">
          <div class="section-header">
            <div
              class="section-header__title section-header__title--realizations"
            >
              Portfolio...
            </div>
            <div class="section-header__subtitle">
              Selected projects that I had the pleasure to work on
            </div>
          </div>

          <div class="showcase">
            {{#each data.projects}}
              <div class="card" deletionId="{{this._id}}"  >
              <span class="inner-card-backface">
                <span class="flip-inner-card">
                  <h3>About</h3>
                  <p class="card-back-side-text">{{this.detalies}}</p>
                  <span class="unflip">Unflip</span>
                </span>
              </span>
              <span class="inner-card">
                <span class="inner-content">
                    <span class="flip">Flip</span>
                    
                    <span class="project-title">{{this.title}} </span>
                    <span class="buttons">
                      <a target="_blank" projectId="{{this._id}}" class="message project-redirection">See Detalies</a>
                    </span>
                </span>
                <span class="glare"></span>
              </span>
            </div>
             {{/each}}
             <div class="card" >
              <span class="inner-card-backface hidden">
                <span class="flip-inner-card">
                  <h3>About</h3>
                  <p class="card-back-side-text"></p>
                  <span class="unflip">Unflip</span>
                </span>
              </span>
              <span class="inner-card">
                <span class="inner-content">        
                    <span class="project-title">Add new project </span>
                    <span class="buttons">
                      <a target="_blank" class="message add-new-project-btn">Add</a>
                    </span>
                </span>
                <span class="glare"></span>
              </span>
            </div>
          </div>
        </div>
      </section>
      <!-- End "Realizations" Section - With Projects -->

      <!-- "Contact" Section -->
      <section id="contact" class="contact">
        <div class="contact__wrapper">
          <div class="section-header">
            <div class="section-header__title section-header__title--contact">
              Contact...
            </div>
            <div class="section-header__subtitle">
              Contact me through provided social media
              <button class="edit-contact-btn">Edit</button>
            </div>
          </div>

          <div class="contact__icons-wrapper">
            <div class="contact__icon">
              <a target="_blank" href='mailto:{{data.about.mail}}'
                ><i class="fa fa-envelope"></i
              ></a>
              <div class="contact__icon-description">
                {{data.about.mail}}
              </div>
            </div>
            <div class="contact__icon">
              <a target="_blank" href='{{data.about.instagram}}'
                ><i class="fa fa-instagram"></i
              ></a>
              <div class="contact__icon-description"></div>
            </div>
            <div class="contact__icon">
              <a target="_blank" href='{{data.about.github}}'
                ><i class="fa fa-github"></i
              ></a>
              <div class="contact__icon-description">{{data.about.github}}</div>
            </div>
          </div>
      <!-- End "Contact" Section -->
    </div>
    <!-- End Scrollable Content -->

           <!-- Add skill -->
    <div class="add-skill-modal hidden">
      <button class="btn-close-skills-modal">&times;</button>
      <div class="add-item-container">
        <div class="add-new-icon__title">Add new icon</div>
        <div class="upload-icon-outer">
          <span class="drag-icon-box" > Upload your icon here 
            <input type="file" class="upload-icon-input"   />
          </span>
        </div>
        <div id="preview-icon"></div>
        <div class="icon-img-input-error" style="display: none"></div>
        <textarea type="text" class="icon-name-input" placeholder="Enter technology name"></textarea>
        <div class="icon-name-error" style="display: none"></div>
        <div class="modal-btns">
          <button class="discard-icon-btn">Discard</button>
          <button class="add-icon-btn">Add</button>
        </div>
      </div>
    </div>

          <!--Add new project-->
    <div class="add-new-project-modal hidden">
      <button class="btn-close-project-modal">&times;</button>
      <div class="add-item-container">
        <div class="add-new-project__title">Add a new project</div>
        <div class="upload-image-outer">
          <span class="drag-image-box">Upload your photos here
           <input type="file" id="image-input" multiple class="upload-image-input" name = "icon"/>
          </span>
        </div>
        <div id="new-project-error-message" style="display: none">Please select at least one photo</div>
        <div class="add-project-subtitles">Selected photos</div>
        <div id="preview__file-name" class="photos-name-container">No photos selected</div>
        <div class="add-project-subtitles">Project title</div>
        <textarea type="text" class="project-title-input  new-project-input" placeholder="Enter project title"></textarea>
        <div id="new-project-error-message" style="display: none">Field cannot be empty</div>
        <div class="add-project-subtitles">Technologies used</div>
        <textarea type="text" class="project-technologies-input new-project-input" placeholder="Enter technologies name"></textarea>
        <div id="new-project-error-message" style="display: none">Field cannot be empty</div>
        <div class="add-project-subtitles">Your contribution</div>
        <textarea type="text" class="project-contribution-input new-project-input" placeholder="Enter your contribution"></textarea>
        <div id="new-project-error-message" style="display: none">Field cannot be empty</div>
        <div class="add-project-subtitles">Detalies</div>
        <textarea type="text" class="project-detalies-input new-project-input" placeholder="Enter detalies about your project"></textarea>
        <div id="new-project-error-message" style="display: none">Field cannot be empty</div>
        <div class="add-project-subtitles">Project link</div>
        <textarea type="text" class="project-link-input new-project-input" placeholder="Enter project link"></textarea>
        <div id="new-project-error-message" style="display: none">Field cannot be empty</div>
        <div class="modal-btns">
          <button class="discard-project-btn">Discard</button>
          <button class="add-project-btn">Add</button>
        </div>
      </div>
    </div>

    <div class="edit-contact-modal hidden">
      <button class="btn-close-contact-modal">&times;</button>
      <div class="add-item-container">
        <div class="add-new-project__title">Edit contact </div>
        <div class="contact-title">Instagram</div>
        <input type="text" class="instagram-link-input edit-contact-input" type="url" value={{data.about.instagram}} placeholder="Enter instagram link"/>
        <div id="edit-contact-error-message" style="display: none">Field cannot be empty</div>
        <div class="contact-title">Github</div>
        <input type="text" class="github-link-input edit-contact-input" value={{data.about.github}} placeholder="Enter github link"/>
        <div id="edit-contact-error-message" style="display: none">Field cannot be empty</div>
        <div class="contact-title">Mail</div>
        <input type="text" class="github-link-input edit-contact-input" value={{data.about.mail}} placeholder="Enter your mail"/>
        <div id="edit-contact-error-message" style="display: none">Field cannot be empty</div>
        <button class="save-edit-contact-btn">Save</button>
      </div>
    </div>

    <div class="confirmation-modal hidden">
      <div class="confirmation-container">
        <h4>Are you sure you want to delete this skill/project?</h4>
        <div class="confirmation-btns">
          <spam class="cancel-deletion-btn">Cancel</spam>
          <spam class="confirm-deletion-btn">Confirm</spam>
        </div>
      </div>
    </div>

    <div class="overlay hidden"></div>
    
    <!-- Scripts postload -->
    <script src="/js/dependencies.min.js" type="text/javascript"></script>
    <script src="/js/global.js" type="text/javascript"></script>
    <script src="/js/pages/admin.js" type="text/javascript"></script>
    <script src="/js/particles/particles.js"></script>
    <script src="/js/particles/app.js"></script>
    <script src="/js/particles/stats.js"></script>
  </body>
</html>
